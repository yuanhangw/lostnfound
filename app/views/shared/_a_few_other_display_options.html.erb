<div id="modal<%=wolf_feed_item.id%>" class="modal hide fade in" style="display: none; ">  
<div class="modal-header">  
<a class="close" data-dismiss="modal">Ã—</a>  
<a class ="lead"> Event Details </a>
</div>  
<div class="modal-body">  


	<span class="content"><%= wolf_feed_item.content %></span>
	<span>Posted by <%= User.find(wolf_feed_item.user_id).name %></span>
	<span><%= time_ago_in_words(wolf_feed_item.created_at) %> ago.</span>

	<span>spreaded 
	  <strong id="spread_count" class="stat">
	    <%= wolf_feed_item.smokes.count %> times.
	  </strong>
	</span>

	<br>

	<a class ="lead"><small> Spreads</small> </a><br>
	<span class="divider"></span>


	<ol class="smokes">
	  <%= render wolf_feed_item.smokes %>
	</ol>

	<%= will_paginate wolf_feed_item.smokes.paginate(:page => params[:page]) %>



             
</div>  
<div class="modal-footer">  
<a href="#" class="btn btn-success">Call to action</a>  
