

    <div class ="notice_board">


              <i class="press icon-file-alt icon-3x pull-left icon-muted"></i>
              <div class="titlearea">
                    <h2>Description</h2>
              </div>

              <div class="message">
              <%=raw @wolf.content%>
              </div>
             
              
              <i class="press icon-magnet icon-3x pull-left icon-muted"></i>
              <div class="titlearea">
                    <h2>Reward</h2>
              </div>

              <div class="reward">
              <%= @wolf.reward %>
              </div>

              <i class="press icon-qrcode icon-3x pull-left icon-muted"></i>
              <div class="titlearea">
                    <h2>Your search token</h2>
              </div>

              <div class="token">
              <%= @smoke.url_token %>
              </div>

              <div class="qrcode">
                <table>
                 <% @qr.modules.each_index do |x| -%>
                   <tr>
                   <% @qr.modules.each_index do |y| -%>
                    <% if @qr.dark?(x,y) -%>
                    <td class="black"/>
                    <% else -%>
                    <td class="white"/>
                    <% end -%>
                   <% end -%>
                   </tr>
                 <% end -%>
                </table>
              </div>

              <i class="press icon-bullhorn icon-3x pull-left icon-muted"></i>
              <div class="titlearea">
                    <h2>Broadcast the request</h2>
              </div>

              <div class="social_demo">

                <ul >
                  <li>
                    <a href="/auth/facebook"><i class="icon-white icon-facebook"></i> Facebook </a>
                  </li>
                  <li>
                    <a href="/auth/twitter"><i class="icon-white icon-twitter"></i>  Twitter </a>
                  </li>
                  <li>
                    <a href="/auth/google_oauth2"><i class="icon-white icon-google-plus-sign"></i>  Google </a>
                  </li>
                </ul>

              </div>

    </div>


