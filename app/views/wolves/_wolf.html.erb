                <p class="lead">Help <%=@wolf.user.name%> to expand the search network</p>
                <h4 class="pull-right">Reward is <%= @wolf.reward %></h4>
              </div>

              <div class="message">
              <h4><%= @wolf.title %></h4>
              <br><br>
              <%=raw @wolf.content%>
              </div>

              <div class="shoot_feed"%>
              <%= render 'shared/shoot_feed' %>
              </div>

              <i class="press icon-qrcode icon-3x pull-left icon-muted"></i>
              <div class="titlearea">
                    <h2>QR code</h2>
              </div>


              <div class="qrcode">
                <%= raw @qrsvg %>
              </div>

              <i class="press icon-info-sign icon-3x pull-left icon-muted"></i>
              <div class="titlearea">
                    <h2>What to do next</h2>
              </div>


              <div class= "howto">
                <p></p>
                <p class="lead">Mobilize online </p>


