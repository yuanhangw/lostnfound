              <%= form_for(@user) do |f| %>

              <%= render 'shared/error_messages' , object: f.object%>


                <%= f.text_field :name, class: "input", placeholder: "Name"%>


                <%= f.text_field :email, class: "input ", placeholder: "Email" %>

                <%= f.password_field :password, class: "input ", placeholder: "Password" %>

                
                <%= f.password_field :password_confirmation, class: "input block level", placeholder: "Password confirmation" %>

                <div class="buttomcontainer">
                <%= f.submit "Create your account", class: "buttom" %>
                </div>
              <% end %>
                