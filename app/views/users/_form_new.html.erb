            <div class ="well well-small">

              <% if current_user %>
              Logged in as <%=current_user[:name]%>
              <%= link_to 'logout','/auth/logout' %>
              <% else %>
              <%= link_to 'login with facebook','/auth/facebook' %>
              <% end %>
                

              <%= form_for(@user) do |f| %>

              <%= render 'shared/error_messages' , object: f.object%>

                        <legend>
                            <a class ="lead"> Not a Balloonman ?</a> <small> Sign up</small>

                        </legend>

                        <div class="divider"></div>


                <%= f.text_field :name, class: "input block level", placeholder: "name"%>


                <%= f.text_field :email, class: "input block level", placeholder: "email" %>

                <%= f.password_field :password, class: "input block level", placeholder: "password" %>

                
                <%= f.password_field :password_confirmation, class: "input block level", placeholder: "password confirmation" %>

                <%= f.submit "Create my account", class: "btn btn-small btn-success" %>
              <% end %>
                
            </div>